<h1>Island Now</h1>
<p>Welcome to Island Now, please select an island</p>
<br>

<div class="container row d-flex">
 <%@islands.each do |island|%>
 <div class="card col-4">
    <div class="card__header">
      <img src="https://a0.muscache.com/im/pictures/miso/Hosting-555632030522710376/original/c8b5a0c1-0468-4402-a772-2b93d75366df.jpeg?im_w=720" alt="card__image" class="card__image" width="600">
    </div>
    <div class="card__body">
      <span class="tag tag-blue"><%=island.location%><% island.location%></span>
      <h4><%=island.name%></h4>
      <p><%=island.description%></p>
      <p>$<%=island.price%></p>
      <%=link_to"Take a closer look!", island_path(island)%>
    </div>
    <div class="card__footer">
      <div class="user">
        <img src="https://i.pravatar.cc/40?img=1" alt="user__image" class="user__image">
        <div class="user__info">
          <h5>Jane Doe</h5>
          <small>2h ago</small>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
