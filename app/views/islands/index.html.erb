<div class="banner d-flex flex column center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://wallpaperaccess.com/full/2083780.jpg);">
  <div class="container">
    <div class="banner-info">
      <h1><strong>Island Now!</strong></h1>
      <p>Discover our dream destinations!</p>
     </div>
  </div>
</div>

<br>

<div class="container row d-flex centering_cards">
 <%@islands.each do |island|%>
 <div class="card col-4">
    <div class="card__header">
      <%=cl_image_tag island.photo.key, width:400, height: 200, crop: :fill %>
    </div>
    <div class="card__body">
      <span class="tag tag-blue"><%=island.location%></span>
      <h4><%=island.name%></h4>
      <p><%=island.mini_description%></p>
      <p><strong>Cost per night: </strong>$<%=island.price%></p>
      <div class="show-link">
      <%=link_to"Take a closer look!", island_path(island)%>
      </div>
    </div>
    <div class="card__footer">
      <div class="user">
        <div class="user__info">
          <h5>Host: <%=island.user.first_name%></h5>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
