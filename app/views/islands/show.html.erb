<div class="banner d-flex flex column center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2015/03/09/18/34/beach-666122__480.jpg">
  <div class="container">
    <div class="banner-info">
      <h1><strong><%=@island.name%></strong></h1>
      <p>Book Your Stay Below!</p>
     </div>
  </div>
</div>

<div class="row">

  <div class="col-6 mx-6 mx-6 pl-2 pr-2" id="show-row">
    <div class="card-trip">
      <div class="image-island">
        <%=cl_image_tag @island.photo.key, crop: :fill%>
      </div>
      <div class="card-trip-infos">
        <div>
          <h2><%=@island.name%></h2>
          <p><%=@island.description%></p>
          <br>
          <p><strong>$<%=@island.price%></strong></p>
          <br>
          <p><%=link_to "Go back to the Islands", islands_path, class: "btn btn-flat mb-2 text-center pt-1"%></p>
          <p><%=link_to "Book here", new_island_booking_path(@island), class: "btn btn-flat mb"%></p>
        </div>
      </div>
    </div>
  </div>
  <%# <div style= "padding-top: 40px"> %>
    <div
      class="map-card"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  <%# </div> %>

</div>
